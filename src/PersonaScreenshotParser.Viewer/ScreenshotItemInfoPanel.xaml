<UserControl x:Class="PersonaScreenshotParser.Viewer.ScreenshotItemInfoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonaScreenshotParser.Viewer"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Label x:Name="FilePathLabel" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="[File path placeholder]"/>
        <Label x:Name="CharacterNameLabel" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="[Character name placeholder]"/>
        <TextBox x:Name="DialogueTextBox" Grid.Row="2" IsReadOnly="True" Text="[Dialogue text placeholder]"/>
    </Grid>
</UserControl>
