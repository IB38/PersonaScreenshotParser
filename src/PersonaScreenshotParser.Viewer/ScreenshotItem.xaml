<UserControl x:Class="PersonaScreenshotParser.Viewer.ScreenshotItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonaScreenshotParser.Viewer"
             mc:Ignorable="d" 
             d:DesignHeight="358" d:DesignWidth="220">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image x:Name="ScreenshotImage" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="200"/>
        <Label x:Name="FileNameLabel" Grid.Row="2" Content="[File name placeholder]" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
